{% set flavor_name = flavor_name or "m1.tiny" %}
{
  "NovaServers.boot_and_associate_floating_ip": [
    {
      "runner": {
        "type": "constant",
        "concurrency": 1,
        "times": 1
      },
      "args": {
        "flavor": {
          "name": "{{flavor_name}}"
        },
        "image": {
          "name": "^cirros.*uec$"
        }
      },
      "context": {
        "users": {
          "users_per_tenant": 1,
          "tenants": 1
        },
        "network": {}
      }
    }
  ]
}